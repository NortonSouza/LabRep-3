@model UniversityProject.Models.User

@{
  ViewData["Title"] = "Create";
}
<header>
  <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">UniversityProject</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
      <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
          <a class="nav-link text-dark" asp-area="" asp-controller="Users" asp-action="Index">Usuários</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" asp-area="" asp-controller="Students" asp-action="Index">Alunos</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" asp-area="" asp-controller="Teachers" asp-action="Index">Professores</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-dark" asp-area="" asp-controller="Courses" asp-action="Index">Cursos</a>
        </li>
      </ul>
    </div>
  </nav>
</header>
<h1>Criar usuário</h1>

<hr />
<div class="row">
  <div class="col-md-4">
    <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
        <label asp-for="IdStudent" class="control-label"></label>
        <input asp-for="IdStudent" class="form-control" />
        <span asp-validation-for="IdStudent" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="IdAdmin" class="control-label"></label>
        <input asp-for="IdAdmin" class="form-control" />
        <span asp-validation-for="IdAdmin" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Nome" class="control-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Cpf" class="control-label"></label>
        <input asp-for="Cpf" class="form-control" />
        <span asp-validation-for="Cpf" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Telefone" class="control-label"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="NivelAcesso" class="control-label"></label>
        <input asp-for="NivelAcesso" class="form-control" />
        <span asp-validation-for="NivelAcesso" class="text-danger"></span>
      </div>
      <div class="form-group">
        <label asp-for="CodigoAcesso" class="control-label"></label>
        <input asp-for="CodigoAcesso" class="form-control" />
        <span asp-validation-for="CodigoAcesso" class="text-danger"></span>
      </div>
      <div class="input-group">
        <span><i class="fas fa-user" aria-hidden="true"></i></span>
        <select class="form-control" name="TipoUsuario">
          <option value="1"> Administrador</option>
          <option value="2"> Aluno</option>
        </select>
      </div>
      @*<div class="form-group">
        <label asp-for="TipoUsuario" class="control-label"></label>
        <input asp-for="TipoUsuario" class="form-control" />
        <span asp-validation-for="TipoUsuario" class="text-danger"></span>
      </div>*@
      <div class="form-group">
        <label asp-for="Senha" class="control-label"></label>
        <input asp-for="Senha" class="form-control" />
        <span asp-validation-for="Senha" class="text-danger"></span>
      </div>
      <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
      </div>
    </form>
  </div>
</div>

<div>
  <a asp-action="Index">Voltar para a listagem</a>
</div>

